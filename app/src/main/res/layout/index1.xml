<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="18px"
        android:textStyle="bold"
        android:text="E-Voting Application" />
    <TextView
        android:id="@+id/input1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_margin="30px"
        android:layout_below="@id/title"
        android:text="Enter Your Voting ID:" />

    <TextView
        android:id="@+id/input2"
        android:layout_width="128dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/input1"
        android:layout_marginLeft="30px"
        android:layout_marginTop="24px"
        android:text="Enter Your Name:" />

    <EditText
        android:layout_width="226dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_marginRight="42px"
        android:layout_toRightOf="@id/input1" />

    <EditText
        android:layout_width="226dp"
        android:layout_height="32dp"
        android:layout_below="@id/input1"
        android:layout_marginStart="13dp"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="6dp"
        android:layout_marginRight="42px"
        android:layout_toEndOf="@+id/input2"
        android:layout_toRightOf="@id/input2"/>

    <TableRow
        android:paddingTop="25dp"
        android:id="@+id/headers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_centerInParent="true"
        android:layout_below="@id/input2">

        <TextView
            android:layout_width="100dp"
            android:padding="3dip"
            android:text="Party Name" />

        <TextView
            android:layout_width="150dp"
            android:gravity="right"
            android:padding="3dip"
            android:text="Candidate Name" />
        <TextView
            android:gravity="right"
            android:padding="3dip"
            android:text="Vote" />
    </TableRow>
    <TableRow
        android:id="@+id/row1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_below="@id/headers">

        <TextView
            android:layout_width="100dp"
            android:padding="20dip"
            android:text="ABC" />

        <TextView
            android:layout_width="150dp"
            android:gravity="right"
            android:padding="3dip"
            android:text="Mr. C. Martin" />
        <TextView
            android:layout_width="wrap_content"
            android:gravity="right"
            android:padding="3dip"
            android:text="                          " />
        <RadioButton
            android:id="@+id/choice_abc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </TableRow>
    <TableRow
        android:id="@+id/row2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_below="@id/row1">

        <TextView
            android:layout_width="100dp"
            android:padding="20dip"
            android:text="BCD" />

        <TextView
            android:layout_width="150dp"
            android:gravity="right"
            android:padding="3dip"
            android:text="Ms. A. Johnson" />

        <TextView
            android:layout_width="wrap_content"
            android:gravity="right"
            android:padding="3dip"
            android:text="                          " />
        <RadioButton
            android:id="@+id/choice_bcd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </TableRow>
    <TableRow
        android:id="@+id/row3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_below="@id/row2">

        <TextView
            android:layout_width="100dp"
            android:padding="20dip"
            android:text="DEF" />

        <TextView
            android:layout_width="150dp"
            android:gravity="right"
            android:padding="3dip"
            android:text="Mr. K. Wales" />

        <TextView
            android:layout_width="wrap_content"
            android:gravity="right"
            android:padding="3dip"
            android:text="                          " />
        <RadioButton
            android:id="@+id/choice_def"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </TableRow>
    <Button
        android:layout_below="@id/row3"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:text="Submit"
        />
</RelativeLayout>